@model IEnumerable<Lands.Domain.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserType.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>

            @*<td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>*@

            <td>
                @*@Html.DisplayFor(modelItem => item.ImagePath)*@
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    if (Lands.BackEnd.Helpers.FilesHelper.ExistFile(Server.MapPath(Url.Content(item.ImagePath))))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="Image" style="width:60px;height:110px;max-width:100%; height:auto" />
                    }
                    else
                    {
                        if (Lands.BackEnd.Helpers.FilesHelper.ExistFile(Server.MapPath(Url.Content(Lands.BackEnd.Helpers.MethodsHelper.GetPathNoImage()))))
                        {
                            <img src="@Url.Content(Lands.BackEnd.Helpers.MethodsHelper.GetPathNoImage())" alt="Image" style="width:60px;height:110px;max-width:100%; height:auto" />
                        }
                    }
                }
                else
                {
                    if (Lands.BackEnd.Helpers.FilesHelper.ExistFile(Server.MapPath(Url.Content(Lands.BackEnd.Helpers.MethodsHelper.GetPathNoImage()))))
                    {
                        <img src="@Url.Content(Lands.BackEnd.Helpers.MethodsHelper.GetPathNoImage())" alt="Image" style="width:60px;height:110px;max-width:100%; height:auto" />
                    }
                }

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.UserId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }

</table>